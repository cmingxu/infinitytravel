<h1>Listing itineraries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Travel</th>
    <th>Sort</th>
    <th>Hotel</th>
    <th>Meals</th>
    <th>Start day num</th>
    <th>End day num</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @itineraries.each do |itinerary| %>
  <tr>
    <td><%= itinerary.name %></td>
    <td><%= itinerary.travel_id %></td>
    <td><%= itinerary.sort %></td>
    <td><%= itinerary.hotel_id %></td>
    <td><%= itinerary.meals %></td>
    <td><%= itinerary.start_day_num %></td>
    <td><%= itinerary.end_day_num %></td>
    <td><%= link_to 'Show', itinerary %></td>
    <td><%= link_to 'Edit', edit_itinerary_path(itinerary) %></td>
    <td><%= link_to 'Destroy', itinerary, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

