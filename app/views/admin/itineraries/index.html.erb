<div class="row">
<h3>后台管理 > Itinerary列表 <div class="pull-right"><%= link_to '创建新Itinerarys', new_admin_itinerary_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Desc</th>
    <th>Travel</th>
    <th>Sort</th>
    <th>Hotel</th>
    <th>Meals</th>
    <th>Start day num</th>
    <th>End day num</th>
    <th>操作</th>
  </tr>

<% @itineraries.each do |itinerary| %>
  <tr>
    <td>
      <%= itinerary.id %>
    </td>
    <td><%= itinerary.name %></td>
    <td><%= itinerary.desc %></td>
    <td><%= itinerary.travel_id %></td>
    <td><%= itinerary.sort %></td>
    <td><%= itinerary.hotel_id %></td>
    <td><%= itinerary.meals %></td>
    <td><%= itinerary.start_day_num %></td>
    <td><%= itinerary.end_day_num %></td>
    <td>
      <%= link_to '查看', [:admin, itinerary] %> | 
      <%= link_to '编辑', edit_admin_itinerary_path(itinerary) %> | 
      <%= link_to '删除', [:admin, itinerary], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @itineraries %>
</div>