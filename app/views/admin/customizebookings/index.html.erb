<div class="row">
<h3>后台管理 > Customizebooking列表 <div class="pull-right"><%= link_to '创建新Customizebookings', new_admin_customizebooking_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Number</th>
    <th>Destination</th>
    <th>City</th>
    <th>Hotel</th>
    <th>Days</th>
    <th>操作</th>
  </tr>

<% @customizebookings.each do |customizebooking| %>
  <tr>
    <td>
      <%= customizebooking.id %>
    </td>
    <td><%= customizebooking.number %></td>
    <td><%= customizebooking.destination_id %></td>
    <td><%= customizebooking.city_id %></td>
    <td><%= customizebooking.hotel_id %></td>
    <td><%= customizebooking.days %></td>
    <td>
      <%= link_to '查看', [:admin, customizebooking] %> | 
      <%= link_to '编辑', edit_admin_customizebooking_path(customizebooking) %> | 
      <%= link_to '删除', [:admin, customizebooking], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @customizebookings %>
</div>