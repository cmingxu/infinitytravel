<div class="row">
<h3>后台管理 > Photocontest列表 <div class="pull-right"><%= link_to '创建新Photocontests', new_admin_photocontest_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Name</th>
    <th>Desc</th>
    <th>Photo</th>
    <th>操作</th>
  </tr>

<% @photocontests.each do |photocontest| %>
  <tr>
    <td>
      <%= photocontest.id %>
    </td>
    <td><%= photocontest.username %></td>
    <td><%= photocontest.name %></td>
    <td><%= photocontest.desc %></td>
    <td><img src="<%= photocontest.photo.url %>" width="200"></td>
    <td>
      <%= link_to '查看', [:admin, photocontest] %> | 
      <%= link_to '编辑', edit_admin_photocontest_path(photocontest) %> | 
      <%= link_to '删除', [:admin, photocontest], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @photocontests %>
</div>