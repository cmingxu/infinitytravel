<%= form_for([:admin, @photocontest],:html => {:class => "form-horizontal", :multipart => true }) do |f| %>
  <% if @photocontest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photocontest.errors.count, "error") %> prohibited this photocontest from being saved:</h2>

      <ul>
      <% @photocontest.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">username</label>
    <div class="controls">
    <%= f.text_field :username %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">name</label>
    <div class="controls">
    <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">desc</label>
    <div class="controls">
    <%= f.text_field :desc %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">photo</label>
    <div class="controls">
    <p>
      <img src="<%= @photocontest.photo.url %>">
    </p>
    <%= f.file_field :photo %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
    </div>
  </div>
<% end %>