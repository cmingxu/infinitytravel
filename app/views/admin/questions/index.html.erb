<div class="row">
<h3>后台管理 > Question列表 <div class="pull-right"><%= link_to '创建新Questions', new_admin_question_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>

称呼</th>
    <th>First name</th>
    <th>Last name</th>
    <th>

优先联系方式</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Country</th>
    <th>Question</th>
    <th>Travel</th>
    <th>操作</th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td>
      <%= question.id %>
    </td>
    <td><%= question.mrs_title %></td>
    <td><%= question.first_name %></td>
    <td><%= question.last_name %></td>
    <td><%= question.preferred_contact_method %></td>
    <td><%= question.email %></td>
    <td><%= question.phone %></td>
    <td><%= question.country %></td>
    <td><%= question.question %></td>
    <td><%= question.travel.try(:name) %></td>
    <td>
      <%= link_to '查看', [:admin, question] %> | 
      <%= link_to '编辑', edit_admin_question_path(question) %> | 
      <%= link_to '删除', [:admin, question], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @questions %>
</div>
