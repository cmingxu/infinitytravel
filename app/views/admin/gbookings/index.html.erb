<div class="row">
<h3>后台管理 > Gbooking列表 <div class="pull-right"><%= link_to '创建新Gbookings', new_admin_gbooking_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>

称呼</th>
    <th>First name</th>
    <th>Last name</th>
    <th>

优先联系方式</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Country</th>
    <th>Region</th>
    <th>Postal code</th>
    <th>Is subscribe</th>
    <th>User</th>
    <th>Agent name</th>
    <th>Agent code</th>
    <th>Destination</th>
    <th>Departure date</th>
    <th>Trip day length</th>
    <th>Adult count</th>
    <th>Child count</th>
    <th>Event comment</th>
    <th>City comment</th>
    <th>订制的线路</th>
    <th>操作</th>
  </tr>

<% @gbookings.each do |gbooking| %>
  <tr>
    <td>
      <%= gbooking.id %>
    </td>
    <td><%= gbooking.mrs_title %></td>
    <td><%= gbooking.first_name %></td>
    <td><%= gbooking.last_name %></td>
    <td><%= gbooking.preferred_contact_method %></td>
    <td><%= gbooking.email %></td>
    <td><%= gbooking.phone %></td>
    <td><%= gbooking.country %></td>
    <td><%= gbooking.region %></td>
    <td><%= gbooking.postal_code %></td>
    <td><%= gbooking.is_subscribe %></td>
    <td><%= gbooking.user_id %></td>
    <td><%= gbooking.agent_name %></td>
    <td><%= gbooking.agent_code %></td>
    <td><%= gbooking.destination_id %></td>
    <td><%= gbooking.departure_date %></td>
    <td><%= gbooking.trip_day_length %></td>
    <td><%= gbooking.adult_count %></td>
    <td><%= gbooking.child_count %></td>
    <td><%= gbooking.event_comment %></td>
    <td><%= gbooking.city_comment %></td>
    <td><%= gbooking.customizebookings.size %></td>
    <td>
      <%= link_to '查看', [:admin, gbooking] %> | 
      <%= link_to '编辑', edit_admin_gbooking_path(gbooking) %> | 
      <%= link_to '删除', [:admin, gbooking], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @gbookings %>
</div>