<div class="row">
<h3>后台管理 > Photo列表 <div class="pull-right"></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Pic</th>
    <th>Desc</th>
    <th>操作</th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td>
      <%= photo.id %>
    </td>
    <td><img src="<%= photo.pic.url %>"></td>
    <td><%= photo.desc %></td>
    <td>
      <%= link_to '查看', [:admin, photo] %> | 
      <%= link_to '编辑', edit_admin_photo_path(photo) %> | 
      <%= link_to '删除', [:admin, photo], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @photos %>
</div>