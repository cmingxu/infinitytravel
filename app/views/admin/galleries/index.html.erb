<div class="row">
<h3>后台管理 > Gallery列表 <div class="pull-right"><%= link_to '创建新Gallerys', new_admin_gallery_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Travel</th>
    <th>操作</th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td>
      <%= gallery.id %>
    </td>
    <td><%= gallery.title %></td>
    <td><%= gallery.travel_id %></td>
    <td>
      <%= link_to '查看', [:admin, gallery] %> | 
      <%= link_to '编辑', edit_admin_gallery_path(gallery) %> | 
      <%= link_to '删除', [:admin, gallery], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @galleries %>
</div>