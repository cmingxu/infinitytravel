<div class="row">
<h3>后台管理 > Press列表 <div class="pull-right"><%= link_to '创建新Presss', new_admin_press_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Cont</th>
    <th>操作</th>
  </tr>

<% @presses.each do |press| %>
  <tr>
    <td>
      <%= press.id %>
    </td>
    <td><%= press.title %></td>
    <td><%= raw truncate(press.cont, :length => 600, :omission => '...') %></td>
    <td>
      <%= link_to '查看', [:admin, press] %> | 
      <%= link_to '编辑', edit_admin_press_path(press) %> | 
      <%= link_to '删除', [:admin, press], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @presses %>
</div>