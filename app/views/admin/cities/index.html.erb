<div class="row">
<h3>后台管理 > City列表 <div class="pull-right"><%= link_to '创建新城市', new_admin_city_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>所属地区</th>
    <th>画廊</th>
    <th>操作</th>
  </tr>

  <% @cities.each do |city| %>
    <tr>
    <td>
      <%= city.id %>
    </td>
    <td><%= city.name %></td>
    <td><%= city.destination.name %></td>
    <td>
      <% if city.gallery %>
        <%= city.gallery.try(:photos).try(:size) || 0 %> / <a href="/admin/galleries/<%= city.gallery.id %>">管理图片</a>
    <% else %>
      <% end %>
    </td>
    <td>
      <%= link_to '查看', [:admin, city] %> | 
      <%= link_to '编辑', edit_admin_city_path(city) %> | 
      <%= link_to '删除', [:admin, city], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @cities %>
</div>
