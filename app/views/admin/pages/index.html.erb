<div class="row">
<h3>后台管理 > Page列表 <div class="pull-right"><%= link_to '创建新Pages', new_admin_page_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Title</th>
    <th>Cont</th>
    <th>页面类型</th>
    <th>操作</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td>
      <%= page.id %>
    </td>
    <td><%= page.name %></td>
    <td><%= page.title %></td>
    <td><%= page.cont %></td>
    <td><%= page.page_type %></td>
    <td>
      <%= link_to '查看', [:admin, page] %> | 
      <%= link_to '编辑', edit_admin_page_path(page.id) %> | 
      <%= link_to '删除', [:admin, page], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @pages %>
</div>