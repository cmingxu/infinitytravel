<div class="row">
<h3>后台管理 > Page列表 <div class="pull-right"></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>分类</th>
    <th>Title</th>
    <th>页面类型</th>
    <th>操作</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td>
      <%= page.id %>
    </td>
    <td><%= page.category %></td>
    <td><%= page.title %></td>
    <td><%= page.page_type %></td>
    <td>
      <%= link_to '删除', detach_admin_travel_page_path(@travel, page), :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
</div>

<%= form_tag assign_admin_travel_pages_path(@travel), :method => :put do %>
  页面：
  <%= select_tag(:id, options_from_collection_for_select(Page.all - @travel.pages, "id", "title")) %>
  <br>
  分类：
  <%= text_field_tag "category" %>
  <br />
  <%= submit_tag "提交", :class => "btn" %>
<% end %>
