<div class="row">
<h3>后台管理 > Dianpin列表 <div class="pull-right"><%= link_to '创建新Dianpins', new_admin_dianpin_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Cont</th>
    <th>Travel code</th>
    <th>Travel</th>
    <th>User</th>
    <th>Is show</th>
    <th>操作</th>
  </tr>

<% @dianpins.each do |dianpin| %>
  <tr>
    <td>
      <%= dianpin.id %>
    </td>
    <td><%= dianpin.name %></td>
    <td><%= dianpin.cont %></td>
    <td><%= dianpin.travel_code %></td>
    <td><%= dianpin.travel_id %></td>
    <td><%= dianpin.user_id %></td>
    <td><%= dianpin.is_show %></td>
    <td>
      <%= link_to '查看', [:admin, dianpin] %> | 
      <%= link_to '编辑', edit_admin_dianpin_path(dianpin) %> | 
      <%= link_to '删除', [:admin, dianpin], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @dianpins %>
</div>