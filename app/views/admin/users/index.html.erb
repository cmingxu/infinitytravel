<div class="row">
<h3>后台管理 > 用户列表 <div class="pull-right"><%= link_to '创建新用户', new_admin_user_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Login</th>
    <th>Name</th>
    <th>Has past</th>
    <th>Home phone</th>
    <th>Cellphone</th>
    <th>Travel agent</th>
    <th>Travel agent code</th>
    <th>Address</th>
    <th>City</th>
    <th>Region</th>
    <th>Country</th>
    <th>Postal code</th>
    <th>Birth date</th>
    <th>Sign in count</th>
    <th>Remember created at</th>
    <th>Current sign in at</th>
    <th>Last sign in at</th>
    <th>Current sign in ip</th>
    <th>Last sign in ip</th>
    <th>Updated at</th>
    <th>Created at</th>
    <th>操作</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <%= user.id %>
    </td>
    <td><%= user.email %></td>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td><%= user.has_past %></td>
    <td><%= user.home_phone %></td>
    <td><%= user.cellphone %></td>
    <td><%= user.travel_agent %></td>
    <td><%= user.travel_agent_code %></td>
    <td><%= user.address %></td>
    <td><%= user.city %></td>
    <td><%= user.region %></td>
    <td><%= user.country %></td>
    <td><%= user.postal_code %></td>
    <td><%= user.birth_date %></td>
    <td><%= user.sign_in_count %></td>
    <td><%= user.remember_created_at %></td>
    <td><%= user.current_sign_in_at %></td>
    <td><%= user.last_sign_in_at %></td>
    <td><%= user.current_sign_in_ip %></td>
    <td><%= user.last_sign_in_ip %></td>
    <td><%= user.updated_at %></td>
    <td><%= user.created_at %></td>
    <td>
      <%= link_to '查看', [:admin, user] %> | 
      <%= link_to '编辑', edit_admin_user_path(user) %> | 
      <%= link_to '删除', [:admin, user], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @users %>
</div>
