<div class="row">
<h3>后台管理 > 绑定相关地区 <div class="pull-right"><%= link_to '返回列表', admin_travels_path %></div></h3>
<hr>

<h5>已绑定地区</h5>
<% @travel.destinations.each do |destination| %>
	<%= destination.name %> <br>
<% end %>

<h5>绑定新地区</h5>
<%= form_tag(create_destination_travel_admin_travel_path(@travel)) do %>
  <div class="control-group">
    <label class="control-label">地区</label>
    <div class="controls">
    	<select name="destination_id">
				<% Destination.order('id').each do |destination| %>
					<option value="<%= destination.id %>" selected="selected"><%= destination.name %></option>  
				<% end %>
			</select>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag %>
    </div>
  </div>
<% end %>


</div>


