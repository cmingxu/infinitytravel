<div class="row">
<h3>后台管理 > Event列表 <div class="pull-right"><%= link_to '创建新Events', new_admin_event_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Cont</th>
    <th>操作</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td>
      <%= event.id %>
    </td>
    <td><%= event.title %></td>
    <td><%= raw truncate(event.cont, :length => 600, :omission => '...') %></td>
    <td>
      <%= link_to '查看', [:admin, event] %> | 
      <%= link_to '编辑', edit_admin_event_path(event) %> | 
      <%= link_to '删除', [:admin, event], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @events %>
</div>