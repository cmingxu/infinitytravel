<%= form_for([:admin, @hotel],:html => {:class => "form-horizontal" }) do |f| %>
  <% if @hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
      <% @hotel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label">name</label>
    <div class="controls">
    <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">所属地区</label>
    <div class="controls">
    <%= f.select :destination_id, Destination.order('id').collect {|c| [ c.name, c.id ] }, { :include_blank => true }%>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">所属城市</label>
    <div class="controls">
    <%= f.select :city_id, City.order('id').collect {|c| [ c.name, c.id ] }, { :include_blank => true }%>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit %>
    </div>
  </div>
<% end %>
