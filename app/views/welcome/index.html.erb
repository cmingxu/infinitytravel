						<form style="padding-top:5px;" method="post" action="/signup">
							<input type="submit" class="enews_input_button" id="" value="注册"></form>
					</center>
				</div>
			</div>

			<!-- END CTA -->

			<!-- CTA -->
			<div class="cta round_corners color_f2f2f2" style="margin-top:15px;">
