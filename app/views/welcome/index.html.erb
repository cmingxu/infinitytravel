<link rel="stylesheet" type="text/css" href="/stylesheets/home.css" media="screen"/>
<div class="self_clear">
	<div id="secondary_content" class="hide_from_print">
		<div class="trackcat-Homepage-Promo">
			<div class="search-box round_corners color_f2f2f2">
				<div id="spinner_control">
					<div style="" class="spinner-content">
						<p class="spinner-msg">正在载入....</p>
						<div class="spinner-img"></div>
					</div>
				</div>
				<!-- ROUNDED CORNERS -->
				<div class="ctl"></div>
				<div class="ctr"></div>
				<div class="cbr"></div>
				<div class="cbl"></div>
				<!-- SEARCH FILTERS -->
				<h2 class="blue-hue">寻找完美假日</h2>
				<form id="keword-search-form" class="light-form" action="/search" method="">
				<select id="travel_destination_control" name="destination" onchange="changeTravelCount()">
					<option value="0">按旅游目的地</option>
					<% @destinations.each do |destination| %>
					<option value="<%= destination.id %>"><%= destination.name %></option>
					<% end %>
				</select>
				<p id="travel_destination_control_filter"></p>
				<select id="travel_interest_control" name="interest" onchange="changeTravelCount()">
					<option value="">按旅游兴趣</option>
					<% @interests.each do |interest| %>
					<option value="<%= interest.id %>"><%= interest.title %></option>
					<% end %>
				</select>
				<p id="travel_interest_control_filter"></p>

				<select id="departure_date_control" name="date" onchange="changeTravelCount()">
					<option value="0_0">按出行日期</option>

					<% @months.each do |month| %>
					<option value="2013_3"><%= month[0] %></option>
					<% end %>

				</select>
				<p id="departure_date_control_filter"></p>
				<select id="price_range_control" name="price_start" onchange="changeTravelCount()">
					<option value="0_0">按价格区间</option>
					<option value="0_10000">少于 ￥10,000</option>
					<option value="10000_25000">￥10,000 - ￥25,000</option>
					<option value="25000_35000">￥25,000 - ￥35,000</option>
					<option value="35000_50000">￥35,000 - ￥50000</option>
					<option value="50000_10000000000000000">￥50,000 - 以上</option>
				</select>
				<p id="price_range_control_filter"></p>

				<!-- :: -->
										
				<div class="view_results self_clear">
					<input type="submit" id="search_button_control" value="查看结果">
					<span id="record_count_control" class="trip_count"> <strong>0</strong>
					</span>
					旅游线路
				</div>
				</form>	
			</div>

			<!-- CTA -->
			<div class="cta round_corners color_f2f2f2" style="margin-top:15px;">
				<!-- ROUNDED CORNERS -->
				<div class="ctl"></div>
				<div class="ctr"></div>
				<div class="cbr"></div>
				<div class="cbl"></div>
				<!-- SEARCH FILTERS -->
				<div class="self_clear">
