<div class="row">
<h3>后台管理 > <%= human_name %>列表 <div class="pull-right"><%%= link_to '创建新<%= human_name %>s', new_admin_<%= singular_table_name %>_path %></div></h3>
<hr>
<table class="table table-striped table-bordered"> 
  <tr>
    <th>ID</th>
<% for attribute in attributes -%>
    <th><%= attribute.human_name %></th>
<% end -%>
    <th>操作</th>
  </tr>

<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <td>
      <%%= <%= singular_table_name %>.id %>
    </td>
<% for attribute in attributes -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td>
      <%%= link_to '查看', [:admin, <%= singular_table_name %>] %> | 
      <%%= link_to '编辑', edit_admin_<%= singular_table_name %>_path(<%= singular_table_name %>) %> | 
      <%%= link_to '删除', [:admin, <%= singular_table_name %>], :confirm => '确定要删除么?', :method => :delete %>
    </td>
  </tr>
<%% end %>
</table>
<%%= paginate @<%= plural_table_name %> %>
</div>